{
  "$schema": "https://json-schema.org/schema",
  "$id": "ReactLib",
  "title": "",
  "type": "object",
  "properties": {
    "app": {
      "type": "string",
      "description": "Name of the app",
      "default": ""
    },
    "scope": {
      "type": "string",
      "description": "Name of the scope",
      "default": ""
    },
    "type": {
      "type": "string",
      "description": "Type of the library",
      "default": ""
    },
    "name": {
      "type": "string",
      "description": "Name of the library",
      "default": ""
    },
    "withComponent": {
      "type": "boolean",
      "description": "Generate the library with 'lib/component.tsx' file"
    },
    "withComponentForwardRef": {
      "type": "boolean",
      "description": "Generate a component with forwardRef in 'lib/component.tsx' file"
    },
    "dryRun": {
      "type": "boolean",
      "description": "Generate the library without creating files",
      "default": false
    }
  },
  "required": []
}
