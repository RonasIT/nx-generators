{
  "$schema": "https://json-schema.org/schema",
  "$id": "ReactLib",
  "title": "",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "Directory for the library",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "app": {
      "type": "string",
      "description": "Name of the app",
      "default": ""
    },
    "scope": {
      "type": "string",
      "description": "Name of the scope",
      "default": ""
    },
    "type": {
      "type": "string",
      "description": "Type of the library",
      "default": ""
    },
    "name": {
      "type": "string",
      "description": "Name of the library",
      "default": ""
    },
    "withComponent": {
      "type": "boolean",
      "description": "Generate the library with 'lib/component.tsx' file",
      "default": false
    },
    "dryRun": {
      "type": "boolean",
      "description": "Generate the library without creating files",
      "default": false
    },
    "preset": {
      "type": "string",
      "description": "Name of the library preset",
      "x-prompt": {
        "message": "Select the library preset",
        "type": "list",
        "items": [
          {
            "value": "@nx/expo:lib",
            "label": "Expo"
          },
          {
            "value": "next-lib",
            "label": "Next.js"
          }
        ]
      }
    }
  },
  "required": []
}
