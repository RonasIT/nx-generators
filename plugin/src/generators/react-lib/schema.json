{
  "$schema": "https://json-schema.org/schema",
  "$id": "ReactLib",
  "title": "",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "Directory for the library",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "withComponent": {
      "type": "boolean",
      "description": "Generate the library with 'lib/component.tsx' file",
      "default": false
    },
    "dryRun": {
      "type": "boolean",
      "description": "Generate the library without creating files",
      "default": false
    }
  },
  "required": []
}
